<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#98D8D8"
    android:focusable="false"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/post_item_publisher_img"
            android:layout_marginLeft="15dp"
            android:layout_width="50dp"
            android:layout_height="50dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@+id/post_item_publisher_img"
            android:orientation="vertical">

            <TextView
                android:id="@+id/post_item_publisher_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="#535856"
                android:textFontWeight="600"
                android:textSize="16dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <ImageView
                    android:src="@drawable/img_14"
                    android:layout_width="15dp"
                    android:layout_height="20dp" />

                <TextView
                    android:id="@+id/post_item_localtion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#999798" />
            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/post_item_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:textColor="#999798"
                android:textSize="13dp" />

            <ImageView
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:layout_below="@+id/post_item_time"
                android:layout_alignParentRight="true"
                android:layout_gravity="right"
                android:src="@drawable/img_13" />
        </RelativeLayout>
    </RelativeLayout>

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/post_item_display_img"
        android:layout_width="320dp"
        android:layout_height="193dp"
        android:layout_gravity="center"
        android:layout_marginTop="13dp"
        android:layout_centerHorizontal="true"
        android:scaleType="centerCrop"
        app:riv_corner_radius_bottom_left="10dp"
        app:riv_corner_radius_bottom_right="10dp"
        app:riv_corner_radius_top_left="10dp"
        app:riv_corner_radius_top_right="10dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/post_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="20dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:textSize="18dp"
            android:textColor="#10100F"
            android:text="llll"/>
        <TextView
            android:id="@+id/post_item_context"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="20dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:textColor="#6D6E6E"
            android:text="lll"/>
    </LinearLayout>

    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="13dp"
        android:stretchColumns="*">
    <TableRow>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_gravity="center">
        <ImageView
            android:src="@drawable/ic_baseline_remove_red_eye_24"
            android:layout_width="25dp"
            android:layout_height="25dp"/>
        <TextView
            android:id="@+id/post_item_reading"
            android:textColor="#989998"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_gravity="center">
        <ImageView
            android:src="@drawable/img_11"
            android:layout_width="28dp"
            android:layout_height="28dp"/>
        <TextView
            android:id="@+id/post_item_love"
            android:textColor="#989998"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_gravity="center">
        <ImageView
            android:src="@drawable/img_3"
            android:layout_width="28dp"
            android:layout_height="28dp"/>
        <TextView
            android:id="@+id/post_item_com_num"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:textColor="#989998"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        </LinearLayout>
        </TableRow>
    </TableLayout>
</LinearLayout>