<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="#98D8D8">
        <LinearLayout
            android:id="@+id/mine_basic_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <ImageView
                android:layout_marginLeft="5dp"
                android:src="@drawable/img_18"
                android:layout_width="25dp"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_marginTop="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="返回"
                android:textColor="@color/white"/>
        </LinearLayout>
        <TextView
            android:layout_marginLeft="110dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="个人页面"/>



    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_marginTop="1dp"
        android:background="#98D8D8"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/mine_basic_tx"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="22dp"
            android:layout_marginTop="30dp"
            android:src="@drawable/img_tx"
            app:riv_corner_radius_bottom_left="40dp"
            app:riv_corner_radius_bottom_right="40dp"
            app:riv_corner_radius_top_left="40dp"
            app:riv_corner_radius_top_right="40dp" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_toRightOf="@+id/mine_basic_tx"
            android:layout_height="wrap_content"
            android:layout_marginTop="31dp"
            android:layout_marginLeft="25dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/mine_basic_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="22sp"
                android:text="张天宇"/>
            <TextView
                android:id="@+id/mine_basic_intro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:maxLines="1"
                android:ellipsize="end"
                android:textSize="15sp"
                android:text="江山如此多娇"/>
        </LinearLayout>
        <Button
            android:id="@+id/mine_basic_message"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/yiguanzhu_button"
            android:text="发送信息" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/mine_basic_collection"
        android:layout_marginLeft="11dp"
        android:layout_marginTop="11dp"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <ImageView
            android:layout_marginTop="5dp"
            android:src="@drawable/img_collection"
            android:layout_width="30dp"
            android:layout_height="30dp"/>
        <TextView
            android:layout_marginTop="9dp"
            android:paddingLeft="8dp"
            android:layout_marginLeft="8dp"
            android:text="他的收藏"
            android:textSize="16sp"
            android:layout_width="match_parent"
            android:drawableEnd="@drawable/ic_baseline_arrow_forward_ios_24"
            android:layout_height="wrap_content"
            android:layout_marginEnd="15dp"/>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/mine_basic_love"
        android:layout_marginLeft="11dp"
        android:layout_marginTop="11dp"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <ImageView
            android:layout_marginTop="5dp"
            android:src="@drawable/mine_love"
            android:layout_width="30dp"
            android:layout_height="30dp"/>
        <TextView
            android:layout_marginTop="9dp"
            android:paddingLeft="8dp"
            android:layout_marginLeft="8dp"
            android:text="他的喜欢"
            android:textSize="16sp"
            android:layout_width="match_parent"
            android:drawableEnd="@drawable/ic_baseline_arrow_forward_ios_24"
            android:layout_height="wrap_content"
            android:layout_marginEnd="15dp"/>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/mine_basic_text"
        android:layout_marginLeft="11dp"
        android:layout_marginTop="11dp"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <ImageView
            android:layout_marginTop="5dp"
            android:src="@drawable/img_text"
            android:layout_width="30dp"
            android:layout_height="30dp"/>
        <TextView
            android:layout_marginTop="9dp"
            android:layout_marginLeft="8dp"
            android:paddingLeft="8dp"
            android:text="他的帖子"
            android:textSize="16sp"
            android:layout_width="match_parent"
            android:drawableEnd="@drawable/ic_baseline_arrow_forward_ios_24"
            android:layout_height="wrap_content"
            android:layout_marginEnd="15dp"
            />
    </LinearLayout>
</LinearLayout>