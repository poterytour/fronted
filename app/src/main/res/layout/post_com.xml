<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:padding="5dp"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/com_area_layout">
    <ImageView
        android:id="@+id/post_com_publisher_img"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_weight="6"
        android:layout_marginLeft="5dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/post_com_publisher_img"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
            android:id="@+id/post_com_publisher_name"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:textColor="#58ccdf"
            android:text="昵称"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp" />

            <TextView
                android:id="@+id/post_com_publisher_time"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:textSize="13sp"
                android:text="时间"/>
        </RelativeLayout>
        <TextView
            android:id="@+id/post_com_context"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:gravity="center_vertical|left"
            android:text="评论内容......."
            android:layout_marginLeft="10dp" />

        </LinearLayout>
    </RelativeLayout>
    <TextView
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#bcbcb4"
        />
</LinearLayout>