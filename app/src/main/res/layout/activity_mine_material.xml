<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.mine.MineMaterialActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="#98D8D8">
        <ImageView
            android:id="@+id/mine_material_back"
            android:layout_marginLeft="5dp"
            android:src="@drawable/img_18"
            android:layout_width="25dp"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_marginTop="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="返回"
            android:textColor="@color/white"/>
        <TextView
            android:layout_marginLeft="110dp"
            android:layout_gravity="center"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="个人资料"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:divider="@drawable/diliver_line"
        android:showDividers="middle|end">
        <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="70dp">
            <TextView
                android:layout_marginLeft="15dp"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:text="头像"/>

            <ImageView
                android:id="@+id/mine_change_tx"
                android:layout_width="54dp"
                android:layout_height="54dp"
                android:layout_marginTop="8dp"
                android:layout_toLeftOf="@+id/touxiang_forward"
                android:src="@drawable/img_tx" />
            <ImageView
                android:id="@+id/touxiang_forward"
                android:src="@drawable/img_next"
                android:layout_marginRight="10dp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="15dp"
                android:layout_width="20dp"
                android:layout_height="20dp"/>
        </RelativeLayout>
        <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="55dp">
            <TextView
                android:layout_marginLeft="15dp"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:layout_centerVertical="true"
                android:text="昵称"/>

            <TextView
                android:id="@+id/mine_material_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:layout_marginLeft="240dp"
                android:layout_toLeftOf="@+id/nicheng_forward"
                android:text="cw061532"
                android:textSize="16sp" />
            <ImageView
                android:id="@+id/nicheng_forward"
                android:layout_marginRight="10dp"
                android:layout_alignParentRight="true"
                android:src="@drawable/img_next"
                android:layout_marginTop="18dp"
                android:layout_marginLeft="15dp"
                android:layout_width="20dp"
                android:layout_height="20dp"/>
        </RelativeLayout>
        <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="55dp">
            <TextView
                android:layout_marginLeft="15dp"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textSize="18sp"
                android:text="手机号"/>

            <TextView
                android:id="@+id/mine_material_tel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:layout_marginLeft="205dp"
                android:layout_toLeftOf="@+id/tel_forward"
                android:text="181****2263"
                android:textSize="16sp" />
            <ImageView
                android:id="@+id/tel_forward"
                android:src="@drawable/img_next"
                android:layout_alignParentRight="true"
                android:layout_marginTop="18dp"
                android:layout_marginLeft="15dp"
                android:layout_width="20dp"
                android:layout_height="20dp"/>
        </RelativeLayout>
        <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="55dp">
            <TextView
                android:layout_marginLeft="15dp"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:layout_centerVertical="true"
                android:text="性别"/>

            <TextView
                android:id="@+id/mine_material_sex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:layout_marginLeft="296dp"
                android:layout_toLeftOf="@+id/xingbie_forward"
                android:text="男"
                android:textSize="16sp" />
            <ImageView
                android:id="@+id/xingbie_forward"
                android:layout_alignParentRight="true"
                android:src="@drawable/img_next"
                android:layout_marginTop="18dp"
                android:layout_marginLeft="15dp"
                android:layout_width="20dp"
                android:layout_height="20dp"/>
        </RelativeLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="55dp">
            <TextView
                android:layout_marginLeft="15dp"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:text="介绍"/>
        </LinearLayout>
    </LinearLayout>
    <EditText
        android:id="@+id/mine_material_intro"
        android:layout_marginTop="10dp"
        android:textSize="16sp"
        android:maxLength="300"
        android:layout_marginLeft="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FAFAFA"
        />
</LinearLayout>